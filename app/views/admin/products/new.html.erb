  <a href="/">  <img src="https://ww1.sinaimg.cn/large/006tKfTcgy1fd8ll90glej318s0h075x.jpg"  style="width:400px; height:150px;" alt=""></a>
</div>

<h2> New Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>

  <div class="group">
    <%= f.input :category, :collection => ["uchino","samsonite", "muji", "adidas", "stationeries","diets","news"], :selected => "Uchino" %>
  </div>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
